{
  "include": ["./src/**/*.ts"],
  "exclude": ["*/**/*.spec.ts"],
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "declaration": true,
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noUncheckedIndexedAccess": true
  }
}
