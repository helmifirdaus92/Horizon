{
  "name": "canvas-client",
  "version": "4.0.0",
  "main": "src/main.ts",
  "scripts": {
    "build": "webpack --mode production && npm run build:sdk",
    "build:dev": "webpack --mode development",
    "watch:dev": "cross-env NODE_OPTIONS='--max-http-header-size=100000' webpack-dev-server --mode development",
    "watch:dev:local": "cross-env PORT=4000 HTTPS=false NODE_OPTIONS='--max-http-header-size=100000' webpack-dev-server --mode development",
    "build:sdk": "tsc -p tsconfig.sdk.json  && node ./scripts/create-sdk-package.js",
    "lint": "eslint -c .eslintrc.js --ext .ts \"./src/**/*.ts\"",
    "prettier": "prettier --write -l --config ./.prettierrc \"./src/**/*.ts\"",
    "test": "karma start --browsers=Chrome",
    "test:no-coverage": "cross-env NO_COVERAGE=1 npm run test",
    "test:ci": "cross-env HORIZON_CI=1 karma start --single-run",
    "ci": "npm run build && npm run test:ci",
    "analyze-bundle": "cross-env ANALYZE_BUNDLE=1 npm run build"
  },
  "author": "Sitecore Corporation",
  "dependencies": {
    "@sitecore/horizon-messaging": "^0.12.2",
    "ckeditor5-custom-build": "file:ckeditor5",
    "@types/resize-observer-browser": "^0.1.7",
    "popper.js": "^1.15.0",
    "quill": "^1.3.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@sitecore/code-quality": "^4.0.3",
    "@types/glob": "8.1.0",
    "@types/jasmine": "^4.3.6",
    "@types/quill": "^2.0.11",
    "@types/uuid": "^9.0.4",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/eslint-plugin-tslint": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "glob": "8.1.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-jasmine": "^4.1.3",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-sourcemap-loader": "0.4.0",
    "karma-teamcity-reporter": "^1.1.0",
    "karma-webpack": "^5.0.0",
    "minimatch": "5.1.2",
    "prettier": "^3.0.3",
    "resolve-url-loader": "5.0.0",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "optionalDependencies": {
    "semver": "^7.5.4"
  }
}
